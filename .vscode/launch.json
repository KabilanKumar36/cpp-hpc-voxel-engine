
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Voxel Engine (Auto-Detect)",
            "type": "cppdbg", 
            "request": "launch",
            // MAGIC LINE: This asks CMake where the executable is built
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${command:cmake.getLaunchTargetDirectory}",
            // To suppress libEGL warnings and ZINK failure
            "environment": [
                {
                    "name": "WAYLAND_DISPLAY",
                    "value": ""
                } ,
                {
                    "name": "GDK_BACKEND",
                    "value": "x11"
                } ,
                {
                    "name": "XDG_SESSION_TYPE",
                    "value": "x11"
                } 
            ],
            // Do NOT use "console": "externalTerminal" (that is for MSVC only)
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}