# Project metadata
PROJECT_NAME           = "@PROJECT_NAME@"
PROJECT_NUMBER         = @PROJECT_VERSION@
PROJECT_BRIEF          = "High-Performance C++ Voxel Engine"

# Inputs
OUTPUT_DIRECTORY       = "@CMAKE_SOURCE_DIR@/docs"
INPUT                  = "@CMAKE_SOURCE_DIR@/src" "@CMAKE_SOURCE_DIR@/README.md"
RECURSIVE              = YES
USE_MDFILE_AS_MAINPAGE = "@CMAKE_SOURCE_DIR@/README.md"

# Output selection
GENERATE_HTML          = YES
HTML_OUTPUT            = api
GENERATE_LATEX         = NO    # Disable other format to save space
GENERATE_RTF		   = NO
GENERATE_MAN		   = NO
GENERATE_XML		   = NO

# Visual Style
HTML_COLORSTYLE_HUE    = 220
HTML_COLORSTYLE_SAT    = 100
HTML_COLORSTYLE_GAMMA  = 80

# Extraction Behavior
EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = YES
EXTRACT_STATIC         = YES

# Diagrams (Graphviz)
HAVE_DOT               = YES
UML_LOOK               = YES
CALL_GRAPH             = YES
CALLER_GRAPH           = YES
GRAPHICAL_HIERARCHY    = YES
DIRECTORY_GRAPH        = YES

# Warnings
QUIET                  = YES
WARN_IF_UNDOCUMENTED   = NO

# 1. Strip the project root path from the output
STRIP_FROM_PATH        = "@CMAKE_SOURCE_DIR@"

# 2. Strip the project root from #include paths in the code view
STRIP_FROM_INC_PATH    = "@CMAKE_SOURCE_DIR@"

# 3. (Optional) Ensure we only see relative paths
FULL_PATH_NAMES        = YES